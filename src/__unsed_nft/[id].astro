import { getNftData } from '../../utils.js';

export async function getStaticPaths() {
  const items = Array(500).fill(0);

  return Promise.all(
    items.map((_, idx) => {
      const data = getNftData(idx + 1);

      return {
        params: { id: data.id },
        props: { nft: data },
      };
    }),
  );
}

